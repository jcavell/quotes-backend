# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /quotes                     quote.QuoteAPIController.getQuotes(p:Int ?= 0, s:Int ?= 2, f ?= "")

GET     /companies                     company.CompanyAPIController.getCompanies()
POST    /companies                     company.CompanyAPIController.insertCompany()
PUT     /companies/:id                 company.CompanyAPIController.updateCompany(id:Int)
DELETE  /companies/:id                 company.CompanyAPIController.deleteCompany(id:Int)

GET     /people                     person.PersonAPIController.getPeople()
POST    /people                     person.PersonAPIController.insertPerson()
PUT     /people/:id                 person.PersonAPIController.updatePerson(id:Int)
DELETE  /people/:id                 person.PersonAPIController.deletePerson(id:Int)

GET     /xsells                     xsell.XsellAPIController.getXsells()
POST    /xsells                     xsell.XsellAPIController.insertXsell()
PUT     /xsells/:id                 xsell.XsellAPIController.updateXsell(id:Int)
DELETE  /xsells/:id                 xsell.XsellAPIController.deleteXsell(id:Int)

GET     /product                    product.ProductAPIController.getASIProduct()

GET     /mock-quote-requests                     quote.MockQuoteRequestAPIController.getMockQuoteRequests()
POST    /mock-quote-requests                    quote.MockQuoteRequestAPIController.insertMockQuoteRequest()
DELETE  /mock-quote-requests/:id                 quote.MockQuoteRequestAPIController.deleteMockQuoteRequest(id:Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


